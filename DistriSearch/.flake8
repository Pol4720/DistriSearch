[flake8]
max-line-length = 100
extend-ignore = E203, E266, E501, W503
max-complexity = 18
select = B,C,E,F,W,T4,B9
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    build,
    dist,
    *.egg-info,
    grpc_generated,
    node_modules
per-file-ignores =
    __init__.py: F401
    tests/*: E501, S101
